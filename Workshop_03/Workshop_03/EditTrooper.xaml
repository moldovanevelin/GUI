<Window x:Class="Workshop_03.EditTrooper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_03"        
        mc:Ignorable="d"
        Title="Edit Trooper" Height="559" Width="400" FontSize="18">
    <StackPanel Grid.Column="2" DataContext="{Binding ElementName=lbox_left, Path=SelectedItem}">
        <Label Content="Power" Background="AliceBlue" Padding="10" />
        <TextBox Text="{Binding Power, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
        <Label Content="Vitality" Background="AliceBlue" Padding="10" />
        <TextBox Text="{Binding Vitality, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
        <Label Content="Value" Background="AliceBlue" Padding="10" />
        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Padding="10" />
        <Button Content="Save!" Padding="10" Click="Button_Click" />
    </StackPanel>
</Window>
