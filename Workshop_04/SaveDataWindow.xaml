<Window x:Class="SZTGUI_GYAK04.SaveDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZTGUI_GYAK04"
        mc:Ignorable="d"
        Title="SaveDataWindow" MaxHeight="200" MaxWidth="320" MinHeight="200" MinWidth="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Please enter a file name with the following format: &#x0d;FileName_Date(DDmmYY): " BorderBrush="Black" BorderThickness="1" FontSize="14" FontFamily="Times New Roman" Background="LightBlue"/>
        <TextBox x:Name="tb_userInput" Grid.Row="1 " BorderBrush="Black" BorderThickness="1" Background="AliceBlue"/>
        <Button x:Name="button_save" Grid.Row="2" Content="Save" BorderBrush="DarkBlue" Background="LightBlue" Width="120" Height="30" FontSize="16" Click="Button_save_Click"/>

    </Grid>
</Window>
